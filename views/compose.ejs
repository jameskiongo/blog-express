<%- include('partials/header'); -%>

<form action="/compose" method="post">
    <h1>Compose</h1>
    <div class="form-group>
        <label for=" inputTitle">Title</label>
        <input type="text" class="form-control" id="inputTitle" name="postTitle">
    </div>
    <div class="form-group>
        <label for=" inputPost">Post</label>
        <textarea class="form-control" name="postBody" id="inputPost" cols="30" rows="10"></textarea><br>
    </div>
    <button type="submit" class="btn btn-primary" name="button">Publish</button>
</form>
<%- include('partials/footer'); -%>